<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.lovek.lookit.MainActivity">

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settings4"
        android:id="@+id/btnSettings"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="settings"
        android:cropToPadding="false"
        android:visibility="visible"
        android:elevation="0dp"
        android:padding="0dp"
        tools:layout_margin="0dp"
        android:layout_width="50dp"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnSettings_onClick" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/user"
        android:id="@+id/imageButton2"
        android:scaleType="fitCenter"
        android:background="@null"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:onClick="info"/>

    <Button
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PLAY"
        android:background="#99e699"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_above="@+id/imageButton2"
        android:layout_marginBottom="123dp"
        android:elevation="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:minWidth="200dip"
        android:minHeight="50dip"
        android:onClick="play"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/music"
        android:background="@drawable/toggle_switch"
        android:checked="true"
        android:onClick="changeMusic"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/PLAY"
        android:layout_toStartOf="@+id/PLAY"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lookitgreen"
        android:id="@+id/imageView3"
        android:contentDescription="@string/logo"
        android:layout_above="@+id/PLAY"
        android:layout_alignLeft="@+id/music"
        android:layout_alignStart="@+id/music"
        android:layout_marginBottom="61dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/music" />

    <Button
        android:text="Single Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singlePlayer"
        android:background="#99e699"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:elevation="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false"
        android:layout_centerInParent="false"
        android:minWidth="200dip"
        android:minHeight="50dip"
        android:textSize="24sp"
        android:onClick="single"
        android:layout_above="@+id/btnSettings"
        android:layout_alignLeft="@+id/PLAY"
        android:layout_alignStart="@+id/PLAY"
        android:layout_marginBottom="43dp" />

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/scoreboard"
        android:id="@+id/scores"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="scores"
        android:cropToPadding="false"
        android:visibility="visible"
        android:elevation="0dp"
        android:padding="0dp"
        tools:layout_margin="0dp"
        android:layout_width="50dp"
        android:background="@null"
        android:onClick="scores_onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
